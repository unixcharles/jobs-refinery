<% content_for :body_content_left do %>
<h1> Current open positions</h1>
  <% if @jobs.count == 0 %>
	There are no open positions at the moment.
  <%else%>
  <ul id="jobs">
    <% @jobs.each do |job| %>
      <li>
        <%= link_to job.job_title, job_url(job) %>
      </li>
    <% end %>
  </ul>
  <%end%>
<% end %>

<%= render :partial => "/shared/content_page" %>
